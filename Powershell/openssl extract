# Extract the private key
openssl pkcs12 -in exported_certificate.pfx -nocerts -out private_key.pem -nodes

# Extract the certificate (public key)
openssl pkcs12 -in exported_certificate.pfx -clcerts -nokeys -out public_certificate.pem

# Convert the private key to PEM format
openssl rsa -in private_key.pem -out private_key.pem
